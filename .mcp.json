{
  "mcpServers": {
    "github": {
      "type": "http",
      "disabled": false,
      "url": "https://api.githubcopilot.com/mcp/",
      "headers": {
        "Authorization": "Bearer ${GITHUB_PERSONAL_ACCESS_TOKEN}"
      },
      "timeout": 60000,
      "description": "GitHub Copilot MCP server for repository operations"
    },
    "angular-cli": {
      "type": "stdio",
      "disabled": false,
      "command": "npx",
      "args": [
        "-y",
        "@angular/cli",
        "mcp"
      ],
      "timeout": 60000
    },
    "chrome-devtools": {
      "type": "stdio",
      "disabled": false,
      "command": "npx",
      "args": [
        "-y",
        "chrome-devtools-mcp@latest"
      ],
      "timeout": 60000
    },
    "firebase": {
      "type": "stdio",
      "disabled": false,
      "command": "npx",
      "args": [
        "-y",
        "firebase-tools@latest",
        "mcp"
      ],
      "timeout": 60000
    },
    "context7": {
      "type": "stdio",
      "disabled": false,
      "description": "Context7 MCP pulls up-to-date, version-specific documentation and code examples straight from the source â€” and places them directly into your prompt.",
      "command": "npx",
      "timeout": 60000,
      "args": [
        "-y",
        "@upstash/context7-mcp"
      ]
    },
    "dart-mcp-server": {
      "type": "stdio",
      "disabled": false,
      "command": "dart",
      "args": [
        "mcp-server",
        "--force-roots-fallback"
      ],
      "timeout": 60000
    },
    "langchain-docs": {
      "type": "http",
      "disabled": false,
      "url": "https://docs.langchain.com/mcp",
      "timeout": 60000
    },
    "postgres": {
      "type": "stdio",
      "disabled": false,
      "description": "PostgreSQL MCP server for schema inspection and read-only query execution.",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-postgres",
        "${POSTGRES_CONNECTION_STRING}"
      ],
      "timeout": 60000
    },
    "playwright": {
      "type": "stdio",
      "disabled": false,
      "description": "Playwright MCP server for browser automation, E2E testing, and accessibility snapshots.",
      "command": "npx",
      "args": [
        "-y",
        "@playwright/mcp@latest"
      ],
      "timeout": 60000
    },
    "docker": {
      "type": "stdio",
      "disabled": false,
      "description": "Docker MCP server for container and image management.",
      "command": "npx",
      "args": [
        "-y",
        "docker-mcp"
      ],
      "timeout": 60000
    },
    "ios-simulator": {
      "type": "stdio",
      "disabled": false,
      "description": "iOS Simulator MCP server for UI interaction, screenshots, and app testing on iOS simulators.",
      "command": "npx",
      "args": [
        "-y",
        "ios-simulator-mcp"
      ],
      "timeout": 60000
    },
    "maestro": {
      "type": "stdio",
      "disabled": false,
      "description": "Maestro MCP server for cross-platform mobile E2E testing on iOS and Android.",
      "command": "uvx",
      "args": [
        "maestro-mcp"
      ],
      "timeout": 60000
    }
  }
}
